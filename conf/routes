# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(name: String ?= "Tom")

GET     /items                      controllers.Item.items
POST    /items                      controllers.Item.create
GET     /items/:id                  controllers.Item.item(id: Long)
PUT     /items/:id                  controllers.Item.update(id: Long)
DELETE  /items/:id                  controllers.Item.delete(id: Long)
